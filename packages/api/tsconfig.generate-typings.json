// TSConfig for monorepo root
// Adapted from https://blog.logrocket.com/setting-up-monorepo-with-lerna-typescript/
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    // "declarationDir": "./dist/types", // When this line is disabled, type files will be co-located with code files.
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "sourceMap": false,
    "tsBuildInfoFile": "./dist/tsconfig.generate-typings.tsbuildinfo",
  },
  "exclude": [
    "**/__tests__", //
  ],
  "include": [
    "src", //
  ],
}
