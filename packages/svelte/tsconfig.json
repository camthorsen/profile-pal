{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    /**
     * Typecheck JS in `.svelte` and `.js` files by default. Disable checkJs if you'd like to use dynamic types in JS.
     * Note that setting allowJs false does not prevent the use of JS in `.svelte` files.
     */
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "es2020"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "target": "ESNext",
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
