{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": [
      "DOM", //
      "DOM.Iterable",
      "ESNext",
    ],
    // if this is set to anything other than `esnext`, Next.js will replace it with `esnext`
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
    },
    "plugins": [
      {
        "name": "next",
      },
    ],
    // inherited, but Next.js assumes `false` (and issues a warning) if not explicitly set
    "strict": true,
    "target": "ES2018",
  },
  "include": [
    "*.ts", //
    "*.tsx",
    "next-env.d.ts",
    "scripts/",
    "src/",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules/", //
    ".next/",
    "!.next/types/**/*.ts",
  ],
}
